<resources>

    <style name="AppThemeLight" parent="AppTheme">
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">#eeeeee</item>
        <item name="colorAccent">#009688</item>
        <item name="colorAccentSupport">#009688</item>
        <item name="colorCommonSnackbarBackground">#323232</item>
        <item name="colorCommonText">@android:color/black</item>
        <item name="colorCommonUnselected">#BDBDBD</item>
        <item name="colorCommonBackground">@android:color/white</item>
        <item name="colorCommonBottomSheetBackground">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="AppThemeDark" parent="AppTheme">
        <item name="colorPrimary">#1d2b38</item>
        <item name="colorPrimaryDark">#1a2227</item>
        <item name="colorAccent">#00C2B1</item>
        <item name="colorAccentSupport">#00C2B1</item>
        <item name="colorCommonSnackbarBackground">#2B2B2B</item>
        <item name="colorCommonText">@android:color/white</item>
        <item name="colorCommonUnselected">#8BBDBDBD</item>
        <item name="colorCommonBackground">#21242d</item>
        <item name="colorCommonBottomSheetBackground">#344256</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <style name="AppThemeMangoBay" parent="AppTheme">
        <item name="colorPrimary">#F7F7F7</item>
        <item name="colorPrimaryDark">#ECEEE2</item>
        <item name="colorAccent">#6BD3DB</item>
        <item name="colorAccentSupport">#6BD3DB</item>
        <item name="colorCommonSnackbarBackground">#323232</item>
        <item name="colorCommonText">@android:color/black</item>
        <item name="colorCommonUnselected">#BDBDBD</item>
        <item name="colorCommonBackground">@android:color/white</item>
        <item name="colorCommonBottomSheetBackground">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialog</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="actionOverflowButtonStyle">@style/AppMenuButton</item>
        <item name="android:itemBackground">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorCommonText</item>
    </style>

    <style name="AppBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:navigationBarColor">?attr/colorCommonBackground</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AppAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">?attr/colorCommonBackground</item>
        <item name="colorControlNormal">?attr/colorCommonText</item>
        <item name="textColorAlertDialogListItem">?attr/colorCommonText</item>
        <item name="android:textColorPrimary">?attr/colorCommonText</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title"
        parent="@android:style/TextAppearance">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppMenuButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?attr/colorAccent</item>
    </style>

    <style name="AppCircleButton" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="AppActionButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:padding">@dimen/common_margin_2</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:textColor">?attr/colorCommonText</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <style name="AppEditTextHashValue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/common_padding</item>
        <item name="android:background">@null</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:textColor">?attr/colorCommonText</item>
        <item name="android:textColorHint">?attr/colorCommonUnselected</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
    </style>

    <style name="AppTextViewDialogComponent">
        <item name="android:layout_marginStart">@dimen/common_margin_2</item>
        <item name="android:layout_marginEnd">@dimen/common_margin_2</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">?attr/colorCommonText</item>
        <item name="android:textColorHint">?attr/colorCommonUnselected</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
    </style>

    <style name="AppDialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

</resources>
