<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout android:id="@+id/from_text"
        style="@style/SelectableLinearLayout"
        android:layout_marginTop="@dimen/common_margin">

        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_from_text" />

        <TextView style="@style/BottomTextView"
            android:text="@string/common_text" />

    </LinearLayout>

    <LinearLayout android:id="@+id/from_file"
        style="@style/SelectableLinearLayout">

        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_search" />

        <TextView style="@style/BottomTextView"
            android:text="@string/common_file" />

    </LinearLayout>

</LinearLayout>