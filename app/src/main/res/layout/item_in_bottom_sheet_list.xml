<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/common_margin_2"
    android:foreground="?android:selectableItemBackground">

    <ImageView android:id="@+id/item_list_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/common_margin_2"
        android:visibility="gone"
        tools:src="@drawable/ic_google_play"
        tools:visibility="visible" />

    <TextView android:id="@+id/item_list_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="@color/colorDarkText"
        android:textSize="@dimen/text_size_info"
        android:fontFamily="@font/google_sans_regular"
        tools:text="MD5" />

    <ImageView android:id="@+id/item_list_additional_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_margin_2"
        app:srcCompat="@drawable/ic_done" />

</LinearLayout>