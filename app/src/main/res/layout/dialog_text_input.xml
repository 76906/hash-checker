<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical">

    <TextView style="@style/AppTextViewDialogComponent"
        android:layout_marginTop="@dimen/common_margin_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_title_text"
        android:textColor="?attr/colorDarkText"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_medium" />

    <EditText android:id="@+id/dialog_text_value"
        style="@style/AppTextViewDialogComponent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin_2"
        android:hint="@string/hint_input_text"
        android:inputType="textPersonName"
        android:padding="@dimen/common_margin_half"
        tools:ignore="TextFields" />

    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin_2"
        android:layout_gravity="end">

        <Button android:id="@+id/dialog_button_close"
            style="@style/AppDialogButtonStyle"
            android:text="@string/common_cancel" />

        <Button android:id="@+id/dialog_text_button_add"
            style="@style/AppDialogButtonStyle"
            android:layout_marginStart="@dimen/common_margin"
            android:text="@string/common_add" />

    </LinearLayout>

</LinearLayout>